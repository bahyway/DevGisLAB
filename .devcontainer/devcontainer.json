// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/miniconda-postgres
{
	"name": "Miniconda (Python 3) & PostgreSQL",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"features": {
		"ghcr.io/devcontainers-contrib/features/ansible:2": {}
	},
	// BF add: Add four project folders: logs,scripts,app and src 
	// let these folders be available also into the DevContainer
	"remoteUser": "vscode",
	/* "mounts": [
		"source=\"%USERPROFILE%\\Desktop\\PROJECTS\\DevGisLAB\\log\",target=/home/vscode/dev/log,type=bind,consistency=cached",
		"source=\"%USERPROFILE%\\Desktop\\PROJECTS\\DevGisLAB\\script\",target=/home/vscode/dev/script,type=bind,consistency=cached",
		"source=\"%USERPROFILE%\\Desktop\\PROJECTS\\DevGisLAB\\src\",target=/home/vscode/dev/src,type=bind,consistency=cached",
		"source=\"%USERPROFILE%\\Desktop\\PROJECTS\\DevGisLAB\\app\",target=/home/vscode/dev/app,type=bind,consistency=cached"
	] */
	"mounts": [
		// Add 'db' folder and two subfolders 'data' & 'logs' to hold PostgreSQL data
		// Change the location of folder 'log' and 'script' , puth both under 'app' folder
		"source=${localEnv:HOME}${localEnv:USERPROFILE/Desktop/PROJECTS/DevGisLAB/src},target=/home/vscode/dev/src,type=bind,consistency=cached",
		"source=${localEnv:HOME}${localEnv:USERPROFILE/Desktop/PROJECTS/DevGisLAB/app/log},target=/home/vscode/dev/app/log,type=bind,consistency=cached",
		"source=${localEnv:HOME}${localEnv:USERPROFILE/Desktop/PROJECTS/DevGisLAB/app/script},target=/home/vscode/dev/app/script,type=bind,consistency=cached",
		"source=${localEnv:HOME}${localEnv:USERPROFILE/Desktop/PROJECTS/DevGisLAB/db/data},target=/home/vscode/dev/db/data,type=bind,consistency=cached",
		"source=${localEnv:HOME}${localEnv:USERPROFILE/Desktop/PROJECTS/DevGisLAB/db/logs},target=/home/vscode/dev/db/logs,type=bind,consistency=cached"
	]
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [5432],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "python --version",
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}